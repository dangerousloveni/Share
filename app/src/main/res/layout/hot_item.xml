<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:id="@+id/iv_photo1"
        android:src="@drawable/user1"
        app:civ_border_width="5dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息主题："
        android:textSize="14sp"
        android:layout_toRightOf="@+id/iv_photo1"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_theme1"
        android:textColor="#000"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/tv_Theme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阿里云招聘大会"
        android:textSize="14sp"
        android:textColor="#f00"
          android:layout_toRightOf="@+id/tv_theme1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息内容："
        android:textSize="12sp"
        android:layout_alignLeft="@+id/tv_theme1"
         android:layout_below="@+id/tv_theme1"
        android:id="@+id/tv_content1"
        android:layout_marginLeft="2.1dp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/tv_Content1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="面向大四毕业的学生，时间2017年12月3号，地点创业园，希望软件学院的同学踊跃参加"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tv_content1"
        android:layout_below="@+id/tv_theme1"/>


  <ImageView
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="#eeee"
      android:layout_below="@+id/iv_photo1"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/userphoto"
        android:layout_toRightOf="@+id/iv_photo1"
        android:layout_marginTop="70dp"
         android:id="@+id/iv_users1"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@+id/iv_users1"
        android:text="马化腾"
        android:textSize="10dp"
        android:layout_marginTop="68dp"
        android:textColor="#000"
        android:id="@+id/tv_name1"
        />
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/phone"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/tv_content1"
        android:layout_marginLeft="120dp"
        android:id="@+id/iv_phone1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_phone1"
        android:text="17377855451"
        android:textSize="10dp"
        android:layout_marginTop="68dp"
     android:id="@+id/tv_phone1"
        android:textColor="#000"
        />




</RelativeLayout>